  <div id="settingsArea">
    <h3>Set Panic Link</h3>
    <input type="url" id="panicLink" placeholder="Enter Panic Link" />
    <input type="text" id="panicKey" placeholder="Enter Panic Key" />
    <button id="activatePanic" onclick="activatePanic()">
      <span class="button-icon">üö®</span> Activate Panic
    </button>
    <button id="feedbackButton" onclick="goToFeedbackForm()">
      <span class="button-icon">‚úçÔ∏è</span> Feedback Form
    </button>
    <button id="shareButton" onclick="copyShareLink()">
      <span class="button-icon">üîó</span> Share Link
    </button>
  </div>

  <script>
    const correctPassword = '12345';
    const passwordInput = document.getElementById('passwordInput');
    const passwordContainer = document.getElementById('passwordContainer');
    const homeContainer = document.getElementById('homeContainer');
    const hubContainer = document.getElementById('hubContainer');
    const hubIframe = document.getElementById('hubIframe');
    const backButton = document.getElementById('backButton');
    const settingsArea = document.getElementById('settingsArea');
    const panicLinkInput = document.getElementById('panicLink');
    const panicKeyInput = document.getElementById('panicKey');

    let panicLink = '';
    let panicKey = '';

    function checkPassword() {
      const input = passwordInput.value;
      if (input === correctPassword) {
        passwordContainer.style.display = 'none';
        homeContainer.style.display = 'block';
      } else {
        alert('Incorrect Password. Try again.');
      }
    }

    function forgotPassword() {
      alert('Hint: Try "12345" üòâ');
    }

    function toggleSettingsArea() {
      if (settingsArea.style.display === 'none' || settingsArea.style.display === '') {
        settingsArea.style.display = 'block';
      } else {
        settingsArea.style.display = 'none';
      }
    }

    function openHub(url) {
      hubIframe.src = url;
      hubContainer.style.display = 'block';
      backButton.style.display = 'flex';
    }

    function closeHub() {
      hubContainer.style.display = 'none';
      hubIframe.src = '';
      backButton.style.display = 'none';
    }

    function activatePanic() {
      panicLink = panicLinkInput.value;
      panicKey = panicKeyInput.value;
      if (panicLink && panicKey) {
        alert(`Panic mode set.\nKey: ${panicKey}\nLink: ${panicLink}`);
      } else {
        alert('Please enter both a Panic Link and Panic Key.');
      }
    }

    function goToFeedbackForm() {
      window.open('https://forms.gle/your-feedback-link', '_blank'); // Replace this
    }

    function copyShareLink() {
      const shareText = window.location.href;
      navigator.clipboard.writeText(shareText).then(() => {
        alert('Share link copied to clipboard!');
      }).catch(() => {
        alert('Failed to copy share link.');
      });
    }
  </script>
